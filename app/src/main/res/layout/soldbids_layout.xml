<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
        android:id="@+id/soldBidsImgPhoto"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvSoldBidsBidsTitle"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="75dp"
        android:layout_toRightOf="@+id/soldBidsImgPhoto"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoldBidBidsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSoldBidsBidsTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/soldBidsImgPhoto"
        android:text="Sold Price : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoldBidsBidsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSoldBidsBidsTitle"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/tvSoldBidBidsPrice"
        android:text="Price"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoldBidMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSoldBidsBidsPrice"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/soldBidsImgPhoto"
        android:text="Market Value :"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoldBidsMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSoldBidsBidsPrice"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tvSoldBidMarketValue"
        android:text="Val"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>