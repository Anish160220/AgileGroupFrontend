<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="135dp"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvBidsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/imgPhoto"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBidPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tvBidsTitle"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imgPhoto"
        android:text="Bid Amount: "
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvBidsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBidsTitle"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tvBidPrice"
        android:text="Price"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMarketsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBidsPrice"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imgPhoto"
        android:text="Market Value :"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBidsPrice"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tvMarketsValue"
        android:text="Value"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOngoingBidFight"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMarketValue"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imgPhoto"
        android:text="Bid Fight" />

</RelativeLayout>