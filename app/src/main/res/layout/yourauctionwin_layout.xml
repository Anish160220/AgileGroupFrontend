<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
        android:id="@+id/yourAuctionWinBidsImgPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvCYourAuctionWinBidsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYourAuctionWinBidsPrice"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:layout_below="@+id/tvCYourAuctionWinBidsTitle"

        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Bid Amount:"/>

    <TextView
        android:id="@+id/tvYourAuctionWinMarketValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYourAuctionWinBidsPrice"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="-24dp"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:text="price"
        android:textSize="20sp" />

</RelativeLayout>